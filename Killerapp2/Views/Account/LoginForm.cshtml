
@{
    ViewData["Title"] = "Log in";
}
<h2>Log in</h2>
<form asp-action="Login" method="post" class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label class="control-label col-sm-2" for="usernameAccount">Gebruikersnaam: </label>
            <div class="col-sm-10 input-breed">
                <input class="form-control" type="text" id="usernameAccount" name="usernameAccount" value="" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="passwordAccount">Wachtwoord: </label>
            <div class="col-sm-10 input-smal">
                <input class="form-control" type="password" id="passwordAccount" name="passwordAccount" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">&nbsp;</label>
            <div class="col-sm-10">
                <input type="submit" value="Login" class="btn-default" />
            </div>
        </div>
        <div class="form-group">
            <p>NOG GEEN ACCOUNT?</p>
            <a asp-area="" asp-controller="Account" asp-action="RegistrationSystem">REGISTREER</a>
        </div>
    </fieldset>
</form>